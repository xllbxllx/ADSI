doctype
html(lang="es")
	head
		meta(charset="utf-8")
		title Reto PUG (Colores)
	body
		h1 Reto PUG (Colores)
		hr
		table(width="400px")
			- var i = 1
			- var r = 250
			- var g = 250
			- var b = 250
			while i <= 10
				tr
					td(style="background-color: rgb("+r+","+g+","+b+"); height: 20px")
					- i++
					- r-=25
					- g-=25